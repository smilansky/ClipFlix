
%section#top-header.row
  %h1.span2
    = link_to "ClipFlix" , home_path
  - if logged_in?        
    %ul.span4.clearfix
      %li= link_to "Trailers", home_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
      %li= link_to "Invite", invite_path
    = form_tag search_videos_path, class: "span5 for-search" do
      = text_field_tag("search_term", "Search for videos here", class: "input search-query")
      = submit_tag("Search", class: "btn") 
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{current_user.fullname}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a= link_to "Account", user_path(current_user)
              %a= link_to "Sign Out", sign_out_path

