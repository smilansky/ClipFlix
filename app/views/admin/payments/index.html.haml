%section.admin_payments
  .container
    .row
      .span10.offset1
        %section.payment_history
          %ul.nav.nav-tabs
            %li.active
              %a(href="/admin/view_payments") Recent Payments
            %li
              %a(href="/admin/add_video") Add a New Video
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.each do |payment|
                %tr
                  %td= payment.user.fullname
                  %td= payment.user.email
                  %td= "$#{payment.amount/100.to_d}"
                  %td= payment.reference_id