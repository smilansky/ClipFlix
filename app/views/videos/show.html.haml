%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img(src="/tmp/monk_large.jpg")
      .video_info.span3
        %header
          %h3= @video.title
          %span Rating: 4.5/5.0
        %p= @video.description

%section.reviews.container
  .row
    .span10.offset1
      %header
        %h3 User Reviews ("#{@reviews.count}")
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %span Rating: "#{review.rating}" / 5
                %p by <a href="">"#{review.user.fullname}"</a>
              .span8
                %p= "#{review.content}"