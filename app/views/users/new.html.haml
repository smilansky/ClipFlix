%section.register.container
  .row
    .span10.offset1
      = bootstrap_form_for @user, html: { class: "form-horizontal"} do |f|
        %header
          %h1 Register
        %fieldset
        = f.email_field :email, label: "Email Address"
        = f.password_field :password
        = f.text_field :fullname, label: "Full Name"
        = hidden_field_tag :invite_token, @invite_token
        %fieldset.credit_card
          .control-group
            %label.control-label Credit Card Number
            .controls
              %input.span3(type="text")
          .control-group
            %label.control-label Security Code
            .controls
              %input.span3(type="text")
          .control-group
            %label.control-label Expiration
            .controls
              = select_month(Date.today, {add_month_numbers: true},  class: 'span2')
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, class: 'span1')
        %fieldset.actions.control-group
          .controls
            %script(src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISHABLE_KEY']}" data-amount="999" data-name="Demo Site" data-description="2 widgets ($9.99)" data-currency="usd")