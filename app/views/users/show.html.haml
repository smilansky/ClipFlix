%section.user.container
  .row
    .span10.offset1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest('knwang@gmail.com'.downcase)}?s=40")
          %h2 #{current_user.fullname}'s video collections (#{current_user.queue_items.count})
          %button.btn Follow
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            - current_user.queue_items.each do |queue_item|
              %tr
                %td
                  = link_to queue_item.video.title, queue_item.video
                %td
                  = link_to queue_item.video.category.name, queue_item.video.category

%section.user_reviews.container
  .row
    .span10.offset1
      %header
        %h3 #{current_user.fullname}'s Reviews (#{current_user.reviews.count})
      %ul
        - current_user.reviews.each do |review|
          %article.review
            %li.row
              .span2
                %p
                  = link_to review.video.title
                %span Rating: 5 / 5
              .span8
                %p #{review.content}
