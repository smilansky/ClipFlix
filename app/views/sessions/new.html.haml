%section.sign_in.container
  .row
    .span10.offset1
      = form_tag sessions_path do
        %header
          %h1 Sign in
        %div.control-group
          = label_tag :email
          = text_field_tag :email, params[:email]
        %div.control-group
          = label_tag :password
          = password_field_tag :password, params[:password]
        = submit_tag "Sign in", class: "btn"
